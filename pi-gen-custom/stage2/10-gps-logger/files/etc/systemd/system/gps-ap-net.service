[Unit]
Description=Configure static IP for GPS logger AP interface
After=network-pre.target
Wants=network-pre.target
Before=hostapd.service dnsmasq.service

[Service]
Type=oneshot
ExecStart=/bin/sh -c 'ip link set wlan0 up; ip addr flush dev wlan0; ip addr add 192.168.4.1/24 dev wlan0'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
